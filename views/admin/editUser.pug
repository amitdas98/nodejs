extends ../layout/main-layout.pug
block content
    main 
        h4 STILL UNDER DEV    
        .grid
            if usrsnms.length > 0 
                each users in usrsnms
                    article.card.user-names
                        header.card__header
                            h3 User Name: #{users.username}
                            h3 User Name: #{users.userID}
                            h3 Phone Number: #{users.number}
                            h3 Email: #{users.email}
                            //img(src='/static/user1.png')
                        div.card__actions
                            button(href=`/admin/edit-user/${users.userID}`, method='POST')  EDIT 
                            a(href=`/admin/delete-user/${users.userID}` method='POST')
                                button DELETE   
                                
            else 
                h1 NO USERS CURRENTLY 
    
        
                        
